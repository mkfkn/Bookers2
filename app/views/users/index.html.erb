<div class="col-xs-offset-1 col-xs-3">
<%= render 'users/list', book: @book, user: @user %>
</div>
<div class="col-xs-7">
<h2>Books</h2>
<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<% @users.each do |user| %>
			<tbody>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>