<div class="container">
<div class="row">
<div class="col-xs-3">
	<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>
<%= render 'users/list', book: @book, user: @user %>
</div>
<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<% @books.each do |book| %>
			<tbody>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			</tbody>
		<% end %>
	</table>

</div>
</div>
</div>