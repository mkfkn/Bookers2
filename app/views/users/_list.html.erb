<h2>User info</h2>
<div>
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>
<tbody>
	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th></th>
	</tr>
</tbody>
<%= link_to "", edit_user_path(current_user.id),class: "btn btn-default glyphicon glyphicon-wrench" %>
<h2>New book</h2>
<%= form_for(book) do |f| %>
	<label>Title</label>
	<%= f.text_field :title %>
	<label>Opinion</label>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>