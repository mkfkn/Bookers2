<div class="container">
<div class="row">
<div class="col-xs-3">
	<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>
	<%= render 'users/list', book: @book, user: @user %>
</div>
<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table">
	<tbody>
				<tr>
					<td><%= attachment_image_tag @book_show.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %><br><%= link_to @user.name, user_path(@user) %></td>
					<td><%= @book_show.title %></td>
					<td><%= @book_show.body %></td>
					<%= render 'books/favorite', book: @book_show %>
					<%= render 'books/comment', book: @book_show %>
					<% if @book_show.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, class: "btn btn-danger" %></td>
					<% end %>
				</tr>
	</tbody>
</table>
<ol>
<% @book_show.book_comments.each do |book_comment| %>
<li>
	<%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
	<%= book_comment.comment %>
	<% if book_comment.user == current_user %>
	<%= link_to "Detroy",book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
	<% end %>
</li>
<% end %>
</ol>
<%= form_for [@book_show, @book_comment] do |f| %>
<%= f.text_area :comment,class: "form-control" %>
<%= f.submit "送信",  class: "btn btn-block" %>
<% end %>
</div>
<div class="col-xs-1">
	</div>
</div>
</div>