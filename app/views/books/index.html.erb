<div class="container">
<div class="row">
<div class="col-xs-3">
	<% if @book.errors.any? %>
<p><%= pluralize(@book.errors.count, "error") %>perrors prohibited this obj from being saved:</p>
<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
</ul>
<% end %>
<%= render 'users/list', book: @book, user: @user %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<% @books.each do |book| %>
			<tbody>
				<tr>
					<td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><% end %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>
</div>
</div>